{
  "name": "vscode-python-extension-core",
  "type": "commonjs",
  "version": "1.1.0",
  "description": "Utilities for creating VSCode Python extensions",
  "author": {
    "name": "34j"
  },
  "license": "MIT",
  "homepage": "https://github.com/34j/vscode-python-extension-core",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/34j/vscode-python-extension-core.git"
  },
  "bugs": {
    "url": "https://github.com/34j/vscode-python-extension-core/issues"
  },
  "keywords": [
    "boilerplate",
    "template",
    "typescript",
    "vitest",
    "pre-commit",
    "semantic-release",
    "typedoc"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src/**/*"
  ],
  "scripts": {
    "build:watch": "tsc --watch --project tsconfig.json",
    "preinstall": "npx only-allow pnpm",
    "build": "tsc --project tsconfig.json",
    "lint": "eslint --fix",
    "typedoc": "typedoc",
    "typedoc:watch": "typedoc --watch",
    "test:watch": "vitest --watch --coverage --coverage.include=src",
    "test": "vitest --coverage --coverage.include=src",
    "watch": "npm-run-all --race --parallel *:watch",
    "update": "npm-check-updates -u"
  },
  "devDependencies": {
    "@antfu/eslint-config": "6.0.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "24.10.13",
    "@types/vscode": "1.109.0",
    "@typescript-eslint/eslint-plugin": "8.56.1",
    "@vitest/browser": "4.0.18",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "10.0.2",
    "npm-run-all2": "8.0.4",
    "playwright": "1.58.2",
    "semantic-release": "25.0.3",
    "ts-node": "10.9.2",
    "typedoc": "0.28.17",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "typedocOptions": {
    "entryPoints": [
      "src"
    ],
    "tsconfig": "tsconfig.json",
    "headings": false
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "README.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  }
}
